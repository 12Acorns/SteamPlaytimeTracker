<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:dbo="clr-namespace:SteamPlaytimeTracker.DbObject" 
                    xmlns:ucsteam="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls.Steam">
    
    <DataTemplate x:Key="SteamAppEntryDataTemplate" DataType="{x:Type dbo:SteamAppEntry}">
        <ucsteam:SteamCapsule Width="{Binding DataContext.UniformWidth, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                              Height="{Binding DataContext.UniformHeight, RelativeSource={RelativeSource AncestorType=ListBox}}"
                          Title="{Binding SteamApp.Name}"
                          ImageUrl="{Binding SteamApp.ImageUrl}"
                          Command="{Binding DataContext.NavigateToPlayTimeViewCommand,
                                RelativeSource={RelativeSource AncestorType=ListBox}}"
                          CommandParameter="{Binding}">
        </ucsteam:SteamCapsule>
    </DataTemplate>
</ResourceDictionary>