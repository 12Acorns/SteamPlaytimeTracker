<Window x:Class="SteamPlaytimeTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamPlaytimeTracker"
        mc:Ignorable="d"
        Title="Steam Playtime Tracker" Height="450" Width="800" MinWidth="350"  MinHeight="400"
        Background="#252525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="22" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="156"/>
                        <ColumnDefinition Width="0.8*"/>
                        <ColumnDefinition Width="0.15*" MinWidth="60"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Steam Installation Location:" Foreground="LightGray"
                            HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12"/>
                    <TextBlock Grid.Column="1" Name="tb_SteamInstall" Text="Steam Install Here..." Foreground="Gray"
                            HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12"
                            Padding="5,0,0,0" FontStyle="Italic"/>
                    <!-- tf -> TextField -> TextBox -->
                    <TextBox Grid.Column="1" Name="tf_SteamInstall" Background="Transparent" Foreground="LightGray" 
                            HorizontalAlignment="Stretch" VerticalAlignment="Center" BorderThickness="0" Margin="5,0,0,0"
                            Panel.ZIndex="1" TextChanged="tf_SteamInstall_TextChanged" TextWrapping="Wrap" />
                    <Button Grid.Column="2" Name="btn_OpenSteamInstallFolder" Background="Transparent" Foreground="LightGray"
                            HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0" 
                            Click="btn_OpenSteamInstallFolder_Click" >
                        <TextBlock Text="Open Folder" TextWrapping="Wrap" FontSize="16" />
                    </Button>

                </Grid>

            </Grid>
        </ScrollViewer>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*" MinWidth="120" MaxWidth="180" />
                <ColumnDefinition Width="*" MinWidth="80" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Name="btn_QuerySteamGames" Content="Query Steam Games" 
                Click="btn_QuerySteamGames_Click" />
            <Button Grid.Column="1" Name="btn_ConfirmSettings" Content="Confirm"
                Click="btn_ConfirmSettings_Click" />
        </Grid>
    </Grid>
</Window>
