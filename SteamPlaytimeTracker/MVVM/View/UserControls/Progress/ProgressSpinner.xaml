<UserControl x:Class="SteamPlaytimeTracker.MVVM.View.UserControls.Progress.ProgressSpinner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls.Progress"
             d:DataContext="{x:Type local:ProgressSpinner}"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="128">
    <Grid Name="LayoutRoot" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <RotateTransform x:Name="rotateTransform"/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Ellipse Fill="SkyBlue" Margin="20" Stretch="UniformToFill">
            <Ellipse.OpacityMask>
                <ImageBrush ImageSource="pack://application:,,,/SteamPlaytimeTracker;component/resources/Progress-Spinner-Mask.png" 
                            Stretch="UniformToFill" />
            </Ellipse.OpacityMask>
            <Ellipse.Triggers>
                <EventTrigger RoutedEvent="Ellipse.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource defaultSpinnerStoryBoard}" x:Name="StoryBoardRoot" />
                </EventTrigger>
            </Ellipse.Triggers>
        </Ellipse>
        <Grid.OpacityMask>
            <RadialGradientBrush>
                <GradientStop Color="Black" Offset="0.98"/>
                <GradientStop Color="Transparent" Offset="0.95"/>
            </RadialGradientBrush>
        </Grid.OpacityMask>
    </Grid>
</UserControl>