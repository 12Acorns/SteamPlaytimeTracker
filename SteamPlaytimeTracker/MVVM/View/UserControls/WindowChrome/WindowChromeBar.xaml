<UserControl x:Class="SteamPlaytimeTracker.MVVM.View.UserControls.WindowChrome.WindowChromeBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:usercontrols="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls"
             xmlns:local="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls.WindowChrome" 
             d:DataContext="{d:DesignInstance Type=local:WindowChromeBar}"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="{StaticResource ApplicationIcoPath}"
           RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased" 
           Margin="4" />
        <TextBlock Grid.Column="1" Text="Main Window" Foreground="LightGray" VerticalAlignment="Center" />
        <usercontrols:ExtendedButton Grid.Column="2" Background="Transparent" Foreground="LightGray" BorderThickness="0"
                                 HoverBackground="LightGray" PressedBackground="Gray"
                                 Command="{Binding MinimizeCommand}"
                                 IsHitTestVisible="True"
                                 WindowChrome.IsHitTestVisibleInChrome="True">
            <Path Data="{StaticResource WindowMinimizeText}" StrokeThickness="1" 
              Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type usercontrols:ExtendedButton}}}"
              Stretch="UniformToFill" StrokeEndLineCap="Round" StrokeStartLineCap="Round" 
              Margin="4" />
        </usercontrols:ExtendedButton>
        <usercontrols:ExtendedButton Grid.Column="3" Background="Transparent" Foreground="LightGray" BorderThickness="0"
                                 HoverBackground="LightGray" PressedBackground="Gray"
                                 Command="{Binding ToggleSizeCommand}"
                                 IsHitTestVisible="True"
                                 WindowChrome.IsHitTestVisibleInChrome="True">
            <Path Data="{StaticResource WindowFullScreenToggleText}" StrokeThickness="1"
              Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type usercontrols:ExtendedButton}}}"
              Stretch="UniformToFill" StrokeEndLineCap="Round" StrokeStartLineCap="Round" 
              Margin="4" />
        </usercontrols:ExtendedButton>
        <usercontrols:ExtendedButton Grid.Column="4" Background="Transparent" Foreground="LightGray" BorderThickness="0"
                                 HoverBackground="LightGray" PressedBackground="Gray"
                                 Command="{Binding QuitApplicationCommand}"
                                 IsHitTestVisible="True"
                                 WindowChrome.IsHitTestVisibleInChrome="True">
            <Path Data="{DynamicResource WindowCloseText}" StrokeThickness="1"
              Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type usercontrols:ExtendedButton}}}" 
              Stretch="UniformToFill" StrokeEndLineCap="Round" StrokeStartLineCap="Round" 
              Margin="4" />
        </usercontrols:ExtendedButton>
    </Grid>
</UserControl>
