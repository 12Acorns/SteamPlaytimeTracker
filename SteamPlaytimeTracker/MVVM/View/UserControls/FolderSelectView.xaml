<UserControl x:Class="SteamPlaytimeTracker.MVVM.View.UserControls.FolderSelectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls" 
             d:DataContext="{d:DesignInstance Type=local:FolderSelectView}"
             mc:Ignorable="d" 
             x:Name="folderSelect"
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="156"/>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="0.15*" MinWidth="60"/>
        </Grid.ColumnDefinitions>

        <!-- Hacky way to allow custom text for message boxes -->
        <Label Grid.Column="0" Content="{Binding InstallFolderTitle}" Foreground="Transparent" Background="Transparent" />
        <Label Grid.Column="0" Content="{Binding InstallFolderNotSelectedWarning}" Foreground="Transparent" Background="Transparent" />

        <Label Grid.Column="0" Content="{Binding InstallIndicator}" Foreground="LightGray"
            HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"/>
        <TextBlock Grid.Column="1" Name="tb_AppInstall" Text="{Binding InstallPlaceholder}" Foreground="Gray"
            HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="12" Padding="5,0,0,0" FontStyle="Italic"/>
        <!-- tf -> TextField -> TextBox -->
        <TextBox Grid.Column="1" Name="tf_AppInstall" Background="Transparent" Foreground="LightGray" 
            HorizontalAlignment="Stretch" VerticalAlignment="Center" BorderThickness="0" Margin="5,0,0,0"
            Panel.ZIndex="1" TextChanged="tf_AppInstall_TextChanged" TextWrapping="Wrap" CaretBrush="LightGray" 
            Text="{Binding FolderPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <local:ExtendedButton Grid.Column="2" x:Name="btn_OpenInstallFolder" Background="Transparent" Foreground="LightGray"
            HoverBackground="#40808080" PressedBackground="{StaticResource translucentGray}"
            HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0"
            Click="btn_OpenInstallFolder_Click">
            <TextBlock Text="Open Folder" TextWrapping="Wrap" FontSize="16" />
        </local:ExtendedButton>
    </Grid>
</UserControl>
