<UserControl x:Class="SteamPlaytimeTracker.MVVM.View.UserControls.Steam.SteamCapsule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls.Steam"
             xmlns:usercontrols="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls"
             d:DataContext="{d:DesignInstance Type=local:SteamCapsule}"
             mc:Ignorable="d"
             d:DesignHeight="180" d:DesignWidth="120">
    <Border BorderThickness="0.5" BorderBrush="White" CornerRadius="5" Margin="1" IsHitTestVisible="True">
        <Border.Background>
            <ImageBrush Stretch="Fill" ImageSource="{Binding CapsuleImage, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </Border.Background>
        <Grid Background="Transparent" IsHitTestVisible="True">
            <usercontrols:ExtendedButton x:Name="btn_Capsule" Background="Transparent" BorderThickness="0" 
                                     HoverBackground="#AAAAFFFF" HoverBorder="Transparent" PressedBackground="Blue"
                                     Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     CommandParameter="{Binding CommandParameter, RelativeSource={RelativeSource AncestorType=UserControl}}">
            </usercontrols:ExtendedButton>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.08*" />
                    <RowDefinition Height="0.1*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="1" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="White" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" FontSize="12" Padding="0" 
                           IsHitTestVisible="False" />
                <Rectangle Grid.Row="1" Panel.ZIndex="-1" IsHitTestVisible="False">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Transparent" Offset="0.0" />
                            <GradientStop Color="#A0000000" Offset="0.1" />
                            <GradientStop Color="Black" Offset="0.5" />
                            <GradientStop Color="#A0000000" Offset="0.9" />
                            <GradientStop Color="Transparent" Offset="1.0" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>
    </Border>
</UserControl>
