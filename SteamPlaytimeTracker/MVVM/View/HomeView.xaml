<UserControl x:Class="SteamPlaytimeTracker.MVVM.View.HomeView"
             x:Name="homeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamPlaytimeTracker.MVVM.View" 
             xmlns:usercontrols="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls"
             mc:Ignorable="d" 
             Background="#252525"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- Header bar -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.95*"/>
                <ColumnDefinition Width="0.05*" MinWidth="60" />
            </Grid.ColumnDefinitions>
            <usercontrols:ExtendedButton Grid.Column="1" Content="Settings" 
                    Background="Transparent" Foreground="LightGray" HoverBackground="{StaticResource translucentGray}"
                    Command="{Binding SwitchToSettingsMenuCommand}" Margin="0,0,5,0"  />
        </Grid>
        <ListBox Grid.Row="1" Background="Transparent" ItemsSource="{Binding SteamCapsuleList}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel x:Name="wrapPanel" HorizontalAlignment="Center" VerticalAlignment="Top" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</UserControl>
