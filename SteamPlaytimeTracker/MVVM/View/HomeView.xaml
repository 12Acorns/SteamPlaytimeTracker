<UserControl x:Class="SteamPlaytimeTracker.MVVM.View.HomeView"
             x:Name="homeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SteamPlaytimeTracker.MVVM.View" 
             xmlns:usercontrols="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls"
             xmlns:ucsteam="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls.Steam"
             xmlns:app="clr-namespace:SteamPlaytimeTracker.Steam.Data.App"
             xmlns:dbo="clr-namespace:SteamPlaytimeTracker.DbObject"
             xmlns:vwp="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
             mc:Ignorable="d" 
             Background="{StaticResource defaultGray}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- Header bar -->
        <Grid Margin="1,1,0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="0.95*"/>
                <ColumnDefinition Width="0.05*" MinWidth="60" />
            </Grid.ColumnDefinitions>
            <usercontrols:ExtendedButton Grid.Column="2" Content="Settings" 
                    Background="Transparent" Foreground="LightGray" HoverBackground="{StaticResource translucentGray}"
                    Command="{Binding SwitchToSettingsMenuCommand}" Margin="0,0,4,0"  />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>

                <usercontrols:ExtendedButton Background="Transparent" BorderThickness="0"
                                             Command="{Binding PlaytimeOrderButtonCommand}">
                    <Image Source="{Binding PlaytimeOrderImagePath}" 
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                           MinHeight="20"
                           MinWidth="20"/>
                </usercontrols:ExtendedButton>
                <usercontrols:ExtendedButton Grid.Column="1" Background="Transparent" BorderThickness="0"
                                             Command="{Binding NameOrderButtonCommand}">
                    <Image Source="{Binding NameOrderImagePath}" 
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        MinHeight="20"
                        MinWidth="20"/>
                </usercontrols:ExtendedButton>
            </Grid>
            <TextBlock Grid.Column="1" Text="{Binding CurrentSortType}" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Foreground="LightGray"
                       FontSize="18"/>
        </Grid>
        <ListBox Grid.Row="1" Background="Transparent" ItemsSource="{Binding SteamAppsView}"
                 ItemContainerStyle="{StaticResource LBI_NoOutline}"
                 ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="0"
                 VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                 VirtualizingPanel.ScrollUnit="Pixel" VirtualizingPanel.VirtualizationMode="Recycling">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <vwp:VirtualizingWrapPanel x:Name="wrapPanel" 
                                               HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <!-- DataContext is SteamApp, so when doing bindings reference the properties/fields in SteamApp - NOT SteamCapsule! -->
                <DataTemplate DataType="{x:Type dbo:SteamAppEntry}">
                    <ucsteam:SteamCapsule Width="120" Height="180" 
                                          Title="{Binding SteamApp.Name}"
                                          ImageUrl="{Binding SteamApp.ImageUrl}"
                                          Command="{Binding DataContext.NavigateToPlayTimeViewCommand,
                                                RelativeSource={RelativeSource AncestorType=ListBox}}"
                                          CommandParameter="{Binding}">
                    </ucsteam:SteamCapsule>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
