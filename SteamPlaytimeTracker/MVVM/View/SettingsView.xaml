<UserControl x:Class="SteamPlaytimeTracker.MVVM.View.SettingsView"
        x:Name="settingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamPlaytimeTracker.MVVM.View"
        xmlns:uc="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls" 
        xmlns:viewmodel="clr-namespace:SteamPlaytimeTracker.MVVM.ViewModel" 
        xmlns:settings="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls.Settings"
        xmlns:localedata="clr-namespace:SteamPlaytimeTracker.Localization.Data"
        xmlns:ext="clr-namespace:SteamPlaytimeTracker.Extensions" 
        xmlns:global="clr-namespace:SteamPlaytimeTracker"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800"
        Background="{StaticResource defaultGray}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="22" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="ictrl_Settings" Background="Transparent" HorizontalContentAlignment="Stretch">
                <uc:FolderSelectView x:Name="fsv_SteamInstall"
                    InstallIndicator="{ext:LocalizationExtensions Key={x:Static global:GlobalData.SteamInstallLocationKey}}"
                    InstallPlaceholder="{ext:LocalizationExtensions Key={x:Static global:GlobalData.SteamInstallFolderPlaceholderKey}}"
                    InstallFolderTitle="{ext:LocalizationExtensions Key={x:Static global:GlobalData.SteamInstallFolderTitleKey}}"
                    InstallFolderNotSelectedWarning="{ext:LocalizationExtensions Key={x:Static global:GlobalData.SteamInstallFolderNotSelectedWarnignKey}}" 
                    FolderPath="{Binding DataContext.SteamInstallPath, Mode=TwoWay, ElementName=settingsView}" />
                <Grid Name="Current_Localization">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="156" />
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="0.15*" MinWidth="60" />
                    </Grid.ColumnDefinitions>
                    <Label Content="{ext:LocalizationExtensions Key={x:Static global:GlobalData.SelectLocalizationKey}}" 
                           HorizontalAlignment="Right" Foreground="LightGray" FontSize="12" />
                    <ComboBox Grid.Column="2" Margin="2" 
                              ItemsSource="{Binding AvailableLocales}" 
                              SelectedItem="{Binding CurrentLocale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type localedata:LocaleData}">
                                <TextBlock Text="{Binding DisplayName}" Foreground="Black" FontSize="12" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                </Grid>
            </ItemsControl>
        </ScrollViewer>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" MinWidth="120" MaxWidth="450" />
                <ColumnDefinition Width="0.25*" MinWidth="80" />
                <ColumnDefinition Width="0.25*" MinWidth="80" />
            </Grid.ColumnDefinitions>

            <Border Background="LightGray" BorderThickness="1" BorderBrush="#FF707070">

            </Border>
            <Button Grid.Column="1" Name="btn_OpenLogs" Content="{ext:LocalizationExtensions Key={x:Static global:GlobalData.OpenLogsKey}}"
                Command="{Binding OpenLogDirCommand}"
                CommandParameter="{Binding ElementName=settingsView}"/>
            <Button Grid.Column="2" Name="btn_ConfirmSettings" 
                    Content="{ext:LocalizationExtensions Key={x:Static global:GlobalData.ConfirmKey}}"
                Command="{Binding ConfirmSettingsCommand}"
                CommandParameter="{Binding ElementName=settingsView}"/>
        </Grid>
    </Grid>
</UserControl>
