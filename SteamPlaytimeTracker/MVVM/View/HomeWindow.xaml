<Window x:Class="SteamPlaytimeTracker.MVVM.View.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:usercontrols="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls"
        xmlns:viewmodel="clr-namespace:SteamPlaytimeTracker.MVVM.ViewModel"
        xmlns:windowchrome="clr-namespace:SteamPlaytimeTracker.MVVM.View.UserControls.WindowChrome"
        xmlns:local="clr-namespace:SteamPlaytimeTracker.MVVM.View"
        d:DataContext="{d:DesignInstance Type=viewmodel:HomeWindowModel}"
        mc:Ignorable="d"
        MinWidth="350"  MinHeight="400"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        PreviewMouseDown="Window_PreviewMouseDown"
        ResizeMode="CanResize"
        SizeChanged="Window_SizeChanged"
        Closing="Window_Closing" Topmost="False"
        Title="Application View" Height="450" Width="800">
    <WindowChrome.WindowChrome>
        <WindowChrome CornerRadius="8" CaptionHeight="25" ResizeBorderThickness="8" />
    </WindowChrome.WindowChrome>
    <Border Background="{StaticResource defaultGray}" BorderThickness="0" CornerRadius="8" Padding="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <windowchrome:WindowChromeBar />
            <ContentControl Grid.Row="1" Content="{Binding NavigationService.CurrentView}" />
        </Grid>
        <Border.Effect>
            <DropShadowEffect Opacity="0.65" BlurRadius="5"/>
        </Border.Effect>
    </Border>
</Window>
